<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EcDial" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="AppTheme" >
        <item name="textAppearanceListItem">@style/list_item_appearance</item>
</style>

<style name="list_item_appearance">
<item name="android:textSize">10sp</item>
<item name="android:textStyle">bold</item>
<item name="android:fontFamily">sans-serif-medium</item>
</style>


    <style name="MyActionButtonStyle" parent="AppTheme">
        <item name="android:minWidth">20dip</item>
        <item name="android:padding">0dip</item>
    </style>

    <style name="AppThemeNav" parent="AppTheme">
        <item name="colorNavigationItem">@color/white</item>
        <item name="colorNavigationItemSelected">@color/white</item>
        <item name="drawableNavigationItemBackground">@drawable/menu_background_color_state</item>
    </style>
    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemBackground">@color/orange</item>
    </style>
</resources>