<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChangePasswordActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgBack"
                    android:background="?actionBarItemBackground"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/back"
                    app:tint="@color/black" />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/robotobold"
                    android:textColor="@color/black"
                    android:layout_marginTop="25dp"
                    android:textSize="16sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/v8"
                android:layout_marginTop="10dp"
                android:layout_above="@+id/rl_bottom"
                android:background="#dbdbdb" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="55dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Old Password"
                    android:layout_centerVertical="true"
                    android:id="@+id/txt_old1"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/robotoregular"/>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:text="Old Password"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"
                    android:id="@+id/txt_old"
                    android:paddingVertical="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/txt_old1"
                    android:background="@drawable/blackcart_corner"
                    android:layout_marginLeft="40dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/robotoregular"/>
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="55dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Password"
                    android:layout_centerVertical="true"
                    android:id="@+id/txt_new1"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/robotoregular"/>

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:text=""
                    android:paddingLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/edt_new"
                    android:paddingVertical="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/txt_new1"
                    android:background="@drawable/blackcart_corner"
                    android:layout_marginLeft="35dp"
                    android:maxLength="35"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/robotoregular"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="55dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm Password"
                    android:layout_centerVertical="true"
                    android:id="@+id/txt_cnfr1"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/robotoregular"/>

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:text=""
                    android:paddingLeft="10dp"
                    android:inputType="textPassword"
                    android:id="@+id/edt_confrm"
                    android:layout_marginRight="10dp"
                    android:paddingVertical="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/txt_cnfr1"
                    android:background="@drawable/blackcart_corner"
                    android:layout_marginLeft="15dp"
                    android:maxLength="35"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/robotoregular"/>
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rl_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_new"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="30dp"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="30dp">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="300dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="60dp"
                    app:cornerRadius="20dp"
                    android:fontFamily="@font/robotoregular"
                    android:id="@+id/btnNext"
                    android:backgroundTint="@color/orange"
                    android:layout_centerInParent="true"
                    android:text="@string/save">

                </com.google.android.material.button.MaterialButton>

            </RelativeLayout>



        </LinearLayout>
    </ScrollView>
</RelativeLayout>