<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MyWishListActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">






    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgBack"
            android:background="?actionBarItemBackground"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/back"
            app:tint="@color/black" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wishlist"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:fontFamily="@font/robotobold"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            android:textSize="16sp"/>
    </RelativeLayout>



    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:elevation="6dp"
        app:cardElevation="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        app:cardMaxElevation="5dp"
        android:id="@+id/cardwishlist"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgSubCat"
                android:layout_width="140dp"
                android:layout_height="160dp"
                android:layout_margin="10dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@drawable/sunglasses"/>

            <ImageView
                android:id="@+id/img_del"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="?actionBarItemBackground"
                android:padding="8dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/delete" />

            <LinearLayout
                android:layout_toRightOf="@+id/imgSubCat"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:id="@+id/ll"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tx_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/imgOffers"
                    android:text="Silicon Sunglasses"
                    android:textColor="#222"
                    android:textSize="16dp"
                    android:fontFamily="@font/robotoregular"
                    android:visibility="visible" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:id="@+id/rl"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/txt_sym"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/robotoregular"
                        android:text="Rs"
                        android:textColor="@color/black"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/txt_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_toRightOf="@+id/txt_sym"
                        android:fontFamily="@font/robotoregular"
                        android:text="35"
                        android:textColor="@color/black"
                        android:textSize="14sp" />


                </RelativeLayout>


               <com.google.android.material.button.MaterialButton
                   android:layout_width="wrap_content"
                   android:layout_gravity="right"
                   android:layout_marginEnd="15dp"
                   app:cornerRadius="20dp"
                   android:backgroundTint="@color/orange"
                   android:textSize="12sp"
                   android:fontFamily="@font/robotoregular"
                   android:text="Move to cart"
                   android:layout_height="wrap_content">



               </com.google.android.material.button.MaterialButton>



            </LinearLayout>



            <View
                android:layout_below="@+id/imgSubCat"
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:background="#dbdbdb"/>

        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>

        </LinearLayout>



    </ScrollView>
</RelativeLayout>