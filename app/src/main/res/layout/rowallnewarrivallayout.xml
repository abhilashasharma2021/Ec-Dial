<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:id="@+id/ll"
            android:orientation="vertical">



            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:src="@drawable/fashion"
                android:id="@+id/ivArrival" />

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                 android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textAlignment="center"
                android:id="@+id/txName"
                android:fontFamily="@font/robotoregular"
                android:text="Fashion" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_below="@+id/txName"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/txOfferPrice"
                    android:fontFamily="@font/robotobold"
                    android:text="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey_light"
                    android:textSize="13sp"
                    android:layout_marginEnd="5dp"
                    android:layout_toEndOf="@+id/txOfferPrice"
                    android:id="@+id/txSellPrice"
                    android:fontFamily="@font/ralewayregular"
                    android:text="" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:textSize="13sp"
                    android:layout_toEndOf="@+id/txSellPrice"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/txOffPercent"
                    android:fontFamily="@font/ralewayregular"
                    android:text="" />

            </RelativeLayout>

        </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll"
        style="@style/Divider.Vertical" />

    <View
        android:layout_width="1dp"
        android:layout_height="200dp"
        style="@style/Divider.Horizontal"/>

</RelativeLayout>