<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardElevation="5dp"
        android:layout_below="@+id/txTitle"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="150dp"
                android:src="@drawable/fashion"
                android:scaleType="centerInside"
                android:id="@+id/ivBrand"
                android:layout_centerHorizontal="true"
                android:layout_height="120dp">
            </ImageView>





            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="3dp"
                android:layout_below="@+id/ivBrand"
                android:textAlignment="center"
                android:id="@+id/txBrandName"
                android:fontFamily="@font/ralewayregular"
                android:text="Dresses and Gowns" />



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_below="@+id/txBrandName"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/txOfferPrice"
                    android:fontFamily="@font/ralewayregular"
                    android:text="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey_light"
                    android:textSize="13sp"
                    android:layout_marginEnd="5dp"
                    android:layout_toEndOf="@+id/txOfferPrice"
                    android:id="@+id/txSellPrice"
                    android:fontFamily="@font/ralewayregular"
                    android:text="" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:textSize="13sp"
                    android:layout_toEndOf="@+id/txSellPrice"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/txOffPercent"
                    android:fontFamily="@font/ralewayregular"
                    android:text="" />

            </RelativeLayout>


        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>



</RelativeLayout>